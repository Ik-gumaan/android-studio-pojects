<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PythonActivity2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:text="Python Notes"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_introPython"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 1: Introduction to Python"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_varPython"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 2: Variables"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_data_typesPython"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 3: Data Types"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_operatorsPython"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 4: Operators"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 5: List"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_tuple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter 6: Tuple"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>