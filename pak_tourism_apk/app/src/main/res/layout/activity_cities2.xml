<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F1FD"
    tools:context=".CitiesActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:gravity="center"
                android:text="Select a City"
                android:textColor="#673AB7"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_khi"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                app:srcCompat="@drawable/karachi" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Karachi"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_quetta"
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/quetta" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quetta"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_peshawar"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                app:srcCompat="@drawable/peshawar" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Peshawar"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_isl"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/islamabad" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Islamabad"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_faisalabad"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                app:srcCompat="@drawable/faislabad" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Faislabad"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_lahore"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                app:srcCompat="@drawable/lahore" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lahore"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>