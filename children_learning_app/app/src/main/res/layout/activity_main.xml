<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="Learning App" />

            <ImageView
                android:id="@+id/img_eAlphabets"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/e_alphabets" />


            <ImageView
                android:id="@+id/img_uAlphabets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/u_alphabets" />

            <ImageView
                android:id="@+id/img_counting"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/counting" />

            <ImageView
                android:id="@+id/img_shapes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/shapes" />

            <ImageView
                android:id="@+id/img_colors"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>