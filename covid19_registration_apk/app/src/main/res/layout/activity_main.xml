<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F1FD"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                app:srcCompat="@drawable/covid19" />

            <ImageView
                android:id="@+id/img_teacher"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                app:srcCompat="@drawable/teacher" />

            <TextView
                android:id="@+id/txt_teacher"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Select Teacher"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_std"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                app:srcCompat="@drawable/student" />

            <TextView
                android:id="@+id/txt_student"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Select Student"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>