<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F1FD"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="241dp"
                app:srcCompat="@drawable/covid19" />

            <TextView
                android:id="@+id/txt_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Teacher Vaccination Record"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:text="\nName"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/inp_stdDept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inp_teacherName"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginStart="31dp"
                android:ems="10"
                android:hint="Enter Your Full Name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:text="Department"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/inp_stdDept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inp_teacherDept"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginStart="31dp"
                android:ems="10"
                android:hint="IT"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:text="Vaccination Data"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/inp_stdDept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inp_teacherVaccinationData"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginStart="31dp"
                android:ems="10"
                android:hint="Did you get vaccinated?"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:text="Vaccination Name"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/inp_stdDept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/inp_teacherVaccinationName"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginStart="31dp"
                android:ems="10"
                android:hint="Name of Vaccination"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:text=""
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@+id/inp_stdDept"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn_submitTeacherRecord"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:text="Submit Record"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>