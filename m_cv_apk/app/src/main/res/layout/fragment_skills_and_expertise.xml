<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.skillsAndExpertise.SkillsAndExpertiseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:text="Skills and Expertise"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/cardview_default_elevation"
                android:src="@drawable/profile_image" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Hasnain Baig"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="Urdu Inpage"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="Adobe Illustrator"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:text="Adobe Photoshop"
                android:textAlignment="center"
                android:textColor="#673AB7"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>